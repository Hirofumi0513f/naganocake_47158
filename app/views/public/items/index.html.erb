<div class ="container text-center" style ="margin-top:50px">
  <div class ="row">
    <h4 class ="bg-light">商品一覧</h4>
  </div>
  <div class="row">
    <div class ="col-10 d-flex flex-wrap justify-content-center">
      <% @items.each do |item| %>
        <div class="col-3">
          <!--get_item_image(width, height)は、app/assets/models/item.rbに定義している-->
          <div>
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_item_image(200,200) %>
            <% end %>
          </div>
          <div><%= item.name %></div>
          <!--to_s(:delimited):3桁ごとにカンマ区切りで表示させるメソッド-->
          <div>¥<%= item.price.to_s(:delimited) %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class ="row mt-5 d-flex justify-content-center">
    <!--↓ページネーションを表示させるための記述。詳細設定は、app/view/kaminariを参照-->
    <%= paginate @items %>
  </div>
</div>
