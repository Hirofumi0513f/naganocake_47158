<div class ="container" style ="margin:50px">
    <div class ="row">
        <h5 class ="bg-light">ショッピングカート</h5>
    </div>
    <div class ="row">
        <!--初期値を設定-->
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
            <table class ="table">
                <thead>
                    <th>商品名</th>
                    <th>単価（税込）</th>
                    <th>数量</th>
                    <th>小計</th>
                    <th></th>
                </thead>
                <tbody>
                    <td><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
                    <td><%= cart_item.amount %></td>
                    <td><%= cart_item.sum_of_price.to_s(:delimited) %></td>
                    <td>削除する</td>
                </tbody>
            </table>
            <!---->
            <% @sum += (cart_item.sum_of_price) %>
        <% end %>
    </div>
    <div class ="row">
        <div class ="col-6 text-left">
            <%= link_to "買い物を続ける",root_path,class:'btn btn-sm btn-primary' %>
        </div>
        <div class ="col-6 text-right">
            <table class ="table">
                <th class ="bg-light">合計金額</th>
                <td><%= @sum %></td>
            </table>
        </div>
    </div>
    <div class ="row mt-5 d-flex justify-content-center">
        <%= link_to "情報入力に進む",new_public_order_path,class:'btn btn-md btn-success' %>
    </div>
</div>
