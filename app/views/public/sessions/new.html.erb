<div class = "container">
  <div class ="row">
    <h5 class = "bg-light">ログイン</h5>
  </div>
  <div class = "form-row align-items-center">
    <h6 class = "bg-light">会員の方はこちらからログイン</h6>
  </div>
  <%= form_with model: @customer,url:session_path(resource_name) do |f| %>
    <div class="col-auto">
      <%= f.label :email,"メールアドレス", size: "10" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "sample@example.com" %>
    </div>
    <div class="col-auto">
      <%= f.label :password,"パスワード",size: "10" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <!--% if devise_mapping.rememberable? %>-->
    <!--  <div class="field">-->
    <!--    %= f.check_box :remember_me %>-->
    <!--    %= f.label :remember_me %>-->
    <!--  </div>-->
    <!--% end %>-->
    <div class="actions">
      <%= f.submit "ログイン",class:'btn btn-sm btn-primary' %>
    </div>
  <% end %>
  <div class = "row align-items-center">
    <h6 class = "bg-light">会員登録がお済みでない方</h6>
  </div>
  <div class = "row">
    <%= link_to "こちら",new_customer_registration_path %> から新規登録を行ってください。
  </div>
</div>

