<h4>商品一覧</h4>
<ul><%= link_to "新規登録ボタン設置",new_admin_item_path %></ul>
<table>
  <thead>
    <tr>
      <th></th>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan = "6"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td>
          <% if item.image.attached? %>
            <%= image_tag item.image,size: "200×200" %>
          <% else %>
            <%= image_tag 'no_image',size: "200×200" %>
          <% end %>
        </td>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <!--to_s(:delimited):3桁ごとにカンマ区切りで表示させるメソッド-->
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == false %>
            販売中
          <% else %>
            売切れ
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!--↓ページネーションを表示させるための記述-->
<%= paginate @items %>
