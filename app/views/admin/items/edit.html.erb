<p id = "notice"></p>
<div class = "container">
  <div class = "row">
    <h5 class ="bg-light">商品編集</h5>
  </div>
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @itemf,url:admin_item_path(@itemf),local:true do |f| %>
        <div>
          <%= f.label :image,"商品画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div>
          <%= f.label :name,"商品名" %>
          <%= f.text_field :name,placeholder: "商品名" %>
        </div>
        <div>
          <%= f.label :introduction,"商品説明" %>
          <%= f.text_area :introduction,placeholder: "ここに説明文を記述します" %>
        </div>
        <div>
          <%= f.label :genre_id,"ジャンル" %>
          <!--プルダウンリストで選択する-->
          <%= f.select :genre_id, [["ケーキ",1], ["プリン",2], ["焼き菓子",3], ["キャンディ",4]], include_blank: "--選択してください--" %>
        </div>
        <div>
          <%= f.label :price,"税抜価格" %>
          <%= f.text_field :price,placeholder: "1000" %> 円
        </div>
        <div>
          <%= f.label :is_active,"販売ステータス" %>
          <!--ラジオボタンで「販売中」「販売停止中」を選べるようにする-->
          <%= f.radio_button :is_active, :false, checked: true %>
          <%= f.label :is_active, "販売中", {value: :false, style:"display: inline-block"} %>

          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "売切れ", {value: :true, style:"display: inline-block"} %>
        </div>
        <div>
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>