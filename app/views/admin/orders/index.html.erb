<div class = "container">
  <div class = "row" style="margin-top:20px">
    <h4 class = "bg-light"><%=@customer.full_name %>さんの注文履歴</h4>
  </div>
  <table class="table table-bordered border-bg offset-1" style="margin:20px" >
    <thead class="bg-light">
      <th>購入日時</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <td><%= l order.created_at,format: :long %></td>
      <% order.order_details.each do |order_details| %>
        <% @total_amount +=(order_details.amount) %>
      <% end %>
      <td><%= @total_amount %></td>
      <td><%= order.status_i18n %></td>
    </tbody>
    <% end %>
  </table>
    <!--</div>-->
      <div class ="row mt-5 d-flex justify-content-center">
    <!--↓ページネーションを表示させるための記述。詳細設定は、app/view/kaminariを参照-->
    <%= paginate @orders %>
  </div>
</div>